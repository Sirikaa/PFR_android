<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E88E5"
    android:paddingLeft="7dp"
    android:paddingBottom="1.5dp">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="7dp">

        <ImageView
            android:id="@+id/imageItemContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/nomContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageItemContact"
            android:text="NOM CONTACT"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/telContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tel"
            android:layout_below="@id/nomContact"
            android:layout_alignLeft="@+id/nomContact"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <TextView
            android:id="@+id/emailContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_below="@id/telContact"
            android:layout_alignLeft="@+id/telContact"
            android:textAppearance="?android:attr/textAppearanceSmall"

            />

        <TextView
            android:id="@+id/fonctionContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailContact"
            android:layout_alignLeft="@+id/emailContact"
            android:text="fonction" />

    </RelativeLayout>

</RelativeLayout>