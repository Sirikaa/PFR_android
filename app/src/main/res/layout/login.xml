<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricule : "
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/labelMatricule"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/labelMatricule"
        android:id="@+id/matricule"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password : "
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_below="@id/labelMatricule"
        android:id="@+id/labelPassword"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/labelPassword"
        android:layout_below="@id/matricule"
        android:id="@+id/password"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/labelPassword"
        android:id="@+id/clickmebutton"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/clickmebutton">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textSize="20dp"
                android:id="@+id/databdd"
                android:hint="DonnÃ©es de la BDD"
            />
    </ScrollView>
</RelativeLayout>